@model PortfolioApp.Models.Entity.TblContact
@using System.Web.Mvc.Html

<section class="section" id="contact">
    <div class="container text-center">
        <p class="section-subtitle">How can you communicate?</p>
        <h6 class="section-title mb-5">Contact Me</h6>
        <!-- contact form -->
        @using (Html.BeginForm("CreateMessage", "Contact", FormMethod.Post, new { @class = "contact-form col-md-10 col-lg-8 m-auto" }))
        {
            <div class="form-row">
                <div class="form-group col-sm-6">
                    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control", placeholder = "Model Name", required = "required" })
                </div>
                <div class="form-group col-sm-6">
                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control", placeholder = "Enter Email", required = "required" })
                </div>
                <div class="form-group col-sm-12">
                    @Html.TextAreaFor(x => x.Description, new { @class = "form-control", placeholder = "Write Something", required = "required", rows = "6" })
                </div>
                <div class="form-group col-sm-12 mt-3">
                    <!-- Hidden Date Field -->
                    @Html.HiddenFor(x => x.Date, new { @class = "form-control", Value = DateTime.Now.ToString("yyyy-MM-ddTHH:mm") })
                </div>
                <div class="form-group col-sm-12 mt-3">
                    <input type="submit" value="Send Message" class="btn btn-outline-primary rounded">
                </div>
            </div>
        }
        <!-- end of contact form -->
    </div><!-- end of container -->
</section>