@model PortfolioApp.Models.Entity.TblContact




<section class="paralax-mf footer-paralax bg-image sect-mt4 route" style="background-image: url(img/overlay-bg.jpg)">
    <div class="overlay-mf"></div>
    <div class="container">
        <div class="row">
            <div class="col-sm-12">
                <div class="contact-mf">
                    <div id="contact" class="box-shadow-full">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="title-box-2">
                                    <h5 class="title-left">
                                        Bize Mesaj Gönder
                                    </h5>
                                </div>
                                <div>
                                    <form method="post">
                                        <div id="sendmessage">Your message has been sent. Thank you!</div>
                                        <div id="errormessage"></div>
                                        <div class="row">
                                            <div class="col-md-12 mb-3">
                                                <div class="form-group">
                                                    <label for="NameSurname">İsim Soyisim</label>
                                                    @Html.TextBoxFor(x => x.NameSurname, new { @class = "form-control" })
                                                    <div class="validation"></div>
                                                </div>
                                            </div>
                                            <div class="col-md-12 mb-3">
                                                <div class="form-group">
                                                    <label for="Email">Email:</label>
                                                    @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
                                                    <div class="validation"></div>
                                                </div>
                                            </div>

                                            <div class="col-md-12 mb-3">
                                                <div class="form-group">
                                                    <label for="Description">Mesaj:</label>
                                                    @Html.TextBoxFor(x => x.Description, new { @class = "form-control" })
                                                    <div class="validation"></div>
                                                </div>
                                            </div>
                                            
                                            <div class="col-md-12">
                                                <button class="btn btn-info" type="submit">Gönder</button>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="title-box-2 pt-4 pt-md-0">
                                    <h5 class="title-left">
                                        Get in Touch
                                    </h5>
                                </div>
                                <div class="more-info">
                                    @*<p class="lead">
                                        Lorem ipsum dolor sit amet consectetur adipisicing elit. Facilis dolorum dolorem soluta quidem
                                        expedita aperiam aliquid at.
                                        Totam magni ipsum suscipit amet? Autem nemo esse laboriosam ratione nobis
                                        mollitia inventore?
                                    </p>*@
                                    <ul class="list-ico">
                                        <li><span class="ion-ios-location"></span> İstanbul</li>
                                        <li><span class="ion-ios-telephone"></span> (531) 919-9999</li>
                                        <li><span class="ion-email"></span> alihnkru@gmail.com</li>
                                    </ul>
                                </div>
                                <div class="socials">
                                    <ul>
                                        
                                        <li><a href="https://github.com/alihankuru"><span class="ico-circle"><i class="ion-social-github"></i></span></a></li>
                                        <li><a href="https://www.linkedin.com/in/alihan-kuru-231021177/"><span class="ico-circle"><i class="ion-social-linkedin"></i></span></a></li>
                                       
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <footer>
        <div class="container">
            <div class="row">
                <div class="col-sm-12">
                    <div class="copyright-box">
