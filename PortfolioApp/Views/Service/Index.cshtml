@model List<PortfolioApp.Models.Entity.TblService>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}

<h2>Hizmetler Listesi</h2>



<table class="table table-bordered">
    <tr>
        <th>Id</th>
        <th>Service Title</th>
        <th>Description</th>
        <th>Image Url</th>

        <th>Update</th>
        <th>Delete</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.ServiceId</td>
            <td>@item.Title</td>
            <td>@item.Description</td>
            <td>@item.ImageUrl</td>

            <td> <a href="/Service/UpdateService/@item.ServiceId" class="btn btn-outline-success">Update</a></td>
            <td> <a href="/Service/DeleteService/@item.ServiceId" class="btn btn-outline-danger">Delete</a></td>

        </tr>

    }

</table>
<td> <a href="/Service/CreateService/" class="btn btn-primary"> Add New Category</a></td>
