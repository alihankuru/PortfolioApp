@model PortfolioApp.Models.Entity.TblAbout
@{
    ViewBag.Title = "UpdateAbout";
    Layout = "~/Views/AdminLayout/Index.cshtml";
}



<div class="text-center">
    <h2>UpdateAbout</h2>
</div>

<head>

</head>
<body>

    <form method="post">
        <label>About ID</label>
        <input type="text" class="table table-bordered" readonly value="@Model.AboutID" name="AboutID" />
        <label>Title</label>
        <input type="text" class="table table-bordered" value="@Model.Title" name="Title" />
        <label>Header</label>
        <input type="text" class="table table-bordered" value="@Model.Header" name="Header" />
        <label>Description</label>
        <textarea class="table table-bordered" name="Description">@Model.Description</textarea>

        <label>Image url</label>
        <input type="text" class="table table-bordered" value="@Model.ImageUrl" name="ImageUrl" />
        <br />

        <button class="btn btn-info" type="submit">Save Changes</button>
        <a href="/About/Index/" class="btn btn-outline-warning">Go Back</a>

    </form>

</body>